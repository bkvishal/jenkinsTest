pipeline {
    agent any

    env {
        def myString = "is always with me"
    }

    parameters {
        string(defaultValue: "baba", description: "Select your world", name: "stringParam")
    }

    stages {
        stage("Maven build") {
            steps {
                dir("horizonx-users") {
                    sh "mvn clean install"
                }
            }
        }

        stage("Tests") {
            steps {
                dir("horizonx-users") {
                    sh "mvn test"
                }
            }
        }

        stage("Your words") {
            steps {
                myOwnFunc(stringParam, myString)
            }
        }
    }
}


def myOwnFunc(String str, String strboolean) {
for(int i=0; i < 5; i++ ) {
echo "${str} + ${strboolean}"
}
}