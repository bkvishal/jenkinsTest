pipeline {
    agent any
    stages {
        stage("Maven Build"){
            steps {
                    sh "mvn -B -Dskiptest clean package"
            }
        }
        stage("Tests"){
            steps {
                    sh "mvn test"
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage("Deliver"){
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}